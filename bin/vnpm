#!/usr/bin/env node

var os = require("os");
var shell = require("shelljs");
var params = process.argv.slice(2).join(' ');

var NPM_REGISTRY="https://r-npm.3weijia.com";
var NODE_DIST="https://npm.taobao.org/dist";
var HOME = os.homedir();

shell.exec(`npm --registry=${NPM_REGISTRY} --disturl=${NODE_DIST} \
    --userconfig=${HOME}/.vnpmrc  --cache=${HOME}/.cache/vnpm ${params}`);



